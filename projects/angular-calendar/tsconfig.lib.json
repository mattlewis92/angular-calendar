{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "module": "es2015",
    "declaration": true,
    "inlineSources": true,
    "importHelpers": true,
    "types": [],
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "emitDecoratorMetadata": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "trace": true
  },
  "exclude": [
    "test/**/*.ts",
    "**/*.spec.ts"
  ]
}
